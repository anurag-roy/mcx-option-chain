{
  "type": "module",
  "name": "mcx-option-chain",
  "version": "1.0.0",
  "description": "MCX Option Chain using Kite APIs",
  "main": "server/index.ts",
  "scripts": {
    "dev": "tsx watch --env-file=.env server/index.ts",
    "build": "npx tsx server/scripts/build.ts",
    "start": "tsx --env-file=.env server/index.ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"{server,client/src}/**/*.{js,jsx,ts,tsx,css,json,md}\"",
    "db": "drizzle-kit",
    "db:seed": "tsx --env-file=.env server/scripts/seed.ts",
    "data:prepare": "npm run db:migrate && npm run db:seed",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "login": "tsx --env-file=.env server/scripts/login.ts",
    "auto-login": "tsx --env-file=.env server/scripts/auto-login.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anurag-roy/mcx-option-chain.git"
  },
  "keywords": [
    "MCX",
    "Option",
    "Chain",
    "Zerodha",
    "Kite"
  ],
  "author": "Anurag Roy <anuragroy@duck.com> (https://anuragroy.dev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anurag-roy/mcx-option-chain/issues"
  },
  "homepage": "https://github.com/anurag-roy/mcx-option-chain#readme",
  "devDependencies": {
    "@types/node": "^24.10.0",
    "drizzle-kit": "^0.31.6",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@date-fns/tz": "^1.4.1",
    "@hono/node-server": "^1.19.6",
    "@hono/node-ws": "^1.2.0",
    "@hono/zod-validator": "^0.7.4",
    "@libsql/client": "^0.15.15",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.7",
    "es-toolkit": "^1.41.0",
    "hono": "^4.10.4",
    "kiteconnect-ts": "^1.1.0",
    "otplib": "^12.0.1",
    "picocolors": "^1.1.1",
    "tough-cookie": "^6.0.0",
    "yahoo-finance2": "^3.10.2",
    "zod": "^4.1.12"
  }
}
